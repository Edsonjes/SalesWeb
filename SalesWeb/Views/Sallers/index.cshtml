@model IEnumerable<SalesWeb.Models.Saller>
@{
    ViewData["Title"] = "Sallers";
}


<h2>@ViewData["Title"]  </h2>

<p>Sallers index page</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(Model => Model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.BaseSalary)
            <th>
                @Html.DisplayNameFor(Model => Model.BirthDate)
            </th>
            <th></th>
        </tr>
    </thead
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelIntem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelIntem => item.BaseSalary)
                </td>

                <td>
                    <a asp-action="Edit" asp-host-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-host-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-host-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 
